import java.util.Scanner;

public class Lab7  {
  public static void main(String [] args) {
    Scanner input = new Scanner(System.in);
   
          int length1 , width1;
          System.out.println("Enter the length and width of first rectangle: ");
          length1 = input.nextInt();
          width1 = input.nextInt();
   
            int length2 , width2 ;
            System.out.println("Enter the length and width of second rectangle: ");
            length2 =  input.nextInt();
            width2 = input.nextInt();
 
             double area1 , area2 ;
             area1 = (double) (length1 * width1);
                System.out.println("The area of first reactangle is: " + area1);
             area2 = (double) (length2 * width2);
                System.out.println("The area of second reactangle is: " + area2);

                 if ( area1 > area2 ) {
                     System.out.println("The rectangle with greater area is rectangle 1: " + area1);}
                 if (area2 > area1 )  {
                     System.out.println("The rectangle with greater area is rectangle 2: " + area2);}
   }
}
